<html lang="en">
<head>
  <meta charset="utf-8"/>
  <title>Honsan - Sign Up</title>
  <link rel="shortcut icon" href="/assets/media/favicon.png"/>
  <link rel="stylesheet" type="text/css" href="/assets/main.css"/>
  <script src="/assets/helper.js" type="text/javascript"></script>
  <script src="/assets/signup.js" type="text/javascript"></script>
</head>
<body>
  <ul id='navbar'>
    <li><a href='/'>New Entry</a></li>
    <li><a href='/add_copy'>Add Copy</a></li>
    <li><a href='/add_member'>Add Member</a></li>
    <li><a href='/catalogue'>Catalogue</a></li>
    <li><a href='/member_list'>Member List</a></li>
  </ul>
  <div id='signup-container'>
    <form id='signup-form'
          name='signup-form'
          class='signup-form'>
      <label for='username'>Username:</label>
      <input class='signup-username' type='text' name='username' placeholder='username' />
      <label for='password'>Password:</label>
      <input class='signup-password' type='text' name='password' placeholder='password' />
      <label for='password2'>Retype Password:</label>
      <input class='signup-password2' type='text' name='password2' placeholder='password (again)' />
      <input type='hidden' name='_csrf' value='{{csrfToken}}'>
      <input class='signup-submit' type='submit' value='Sign Up'/>
    </form>
  </div>
  <div id='signup-results'></div>
</body>
</html>